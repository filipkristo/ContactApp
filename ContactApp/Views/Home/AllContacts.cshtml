

<h2>Contacts</h2>

<p>
    <a href="/#/NewContact">New Contact</a>
</p>

<div ng-controller="ContactController">
    <table class="table">
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Address
            </th>
            <th>
                PostCode
            </th>
            <th>
                City
            </th>
            <th>
                Country
            </th>
        </tr>
        <tr ng-repeat="contact in contacts">
            <td>
                {{contact.FirstName}}
            </td>
            <td>
                {{contact.LastName}}
            </td>
            <td>
                {{contact.Address}}
            </td>
            <td>
                {{contact.PostCode}}
            </td>
            <td>
                {{contact.City}}
            </td>
            <td>
                {{contact.Country}}
            </td>
        </tr>
    </table>

</div>


